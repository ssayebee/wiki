      data: ''
    }
  }
  callApi = () =&gt; {
    fetch('https://jsonplaceholder.typicode.com/todos/1')
    .then(res =&gt; res.json())
    .then(json =&gt; {
      this.setState({
        data: json.title
      });
    })
  }
  componentDidMount() {
    this.callApi();
  }
